<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpaceFlight.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="titleTextAppearance">@style/SpaceFlight.TextAppearance.Regular.14</item>
        <item name="subtitleTextAppearance">@style/SpaceFlight.TextAppearance.Regular.12</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
        <item name="titleTextColor">@color/black</item>
        <item name="subtitleTextColor">@color/black</item>
    </style>

    <style name="SpaceFlight.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/bg_white_rounded</item>
        <item name="queryBackground">@drawable/bg_white_rounded</item>
        <item name="submitBackground">@drawable/bg_white_rounded</item>
        <item name="closeIcon">@drawable/ic_close_search</item>
        <item name="searchIcon">@drawable/ic_search_icon</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:elevation">@dimen/margin4</item>
        <item name="android:editTextColor">@color/slate_grey</item>
    </style>


    <style name="ShapeAppearance.ShapeableImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/margin8</item>
    </style>


</resources>